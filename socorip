local function ToggleMenu()
    if Frame.Visible then
        Frame:TweenPosition(UDim2.new(0, -220, 0.5, -75), "Out", "Quart", 0.5, true)
        wait(0.5)
        Frame.Visible = false
    else
        Frame.Visible = true
        Frame:TweenPosition(UDim2.new(0, 10, 0.5, -75), "Out", "Quart", 0.5, true)
    end
end

